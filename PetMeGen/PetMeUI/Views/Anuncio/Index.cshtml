@model IEnumerable<PetMeGenNHibernate.EN.PetMe.AnuncioEN>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="text-center">
    <h2>Menu administracion (anuncios)</h2>
    @*<form action="Create" method="get">
        <button type="submit" class="btn btn-primary">Crear nuevo anuncio</button>
    </form>*@
    @Html.ActionLink("Nuevo anuncio", "Create","",new { @class="btn btn-primary" })
</div>



<div class="container h-100 d-flex flex-wrap">


    @foreach (var item in Model)
    {
        <div class="col-md-6">
            <div class="jumbotron">
               
                    <h2 class="text-center">Anuncio @Html.DisplayFor(model => item.Id)</h2>

                    @if (item.AnimalContratado == 0)
                    {
                        <h4 class="text-center">Diponible</h4>
                    }
                    else
                    {
                        <h4 class="text-center">Contratado</h4>

                    }

                    <div class="row">
                        <div class="col-md-4">
                           
                            @Html.ActionLink("Editar", "Edit", new { id = item.Id }, new { @class="btn btn-warning" })

                        </div>
                        <div class="col-md-4">
                           
                            @Html.ActionLink("Detalles", "Details", new { id = item.Id }, new { @class = "btn btn-primary" })
                        </div>
                        <div class="col-md-4">
                            
                            @Html.ActionLink("Eliminar", "Delete", new { id = item.Id }, new { @class = "btn btn-danger" })

                        </div>

                        @*<div class="col-md-3">
                            
                            @Html.ActionLink("Ver comentarios", "Index", "Comentario", new { id = item.Id }, new { @class= "btn btn-info" })

                        </div>*@
                    </div>

                
            </div>
        </div>

    }

</div>