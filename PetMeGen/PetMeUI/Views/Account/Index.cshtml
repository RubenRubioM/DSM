
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}




@using (Html.BeginForm("Login", "Account", FormMethod.Post))
{



<div class="form-row align-items-center pt-5">

    <div class="col-auto">
        <label class="sr-only" for="nick">Nick: </label>
        <div class="input-group mb-2">
            <div class="input-group-prepend">
                <div class="input-group-text">@@</div>
            </div>
            <input type="text" class="form-control" id="nick" placeholder="Rubensi" name="nick">
        </div>
    </div>

    <div class="col-auto">
        <label class="sr-only" for="pass">Contraseña: </label>
        <input type="password" class="form-control mb-2" id="pass" placeholder="******" name="pass">
    </div>

    <div class="col-auto">
        <div class="form-check mb-2">
            <input class="form-check-input" type="checkbox" id="autoSizingCheck">
            <label class="form-check-label" for="autoSizingCheck">
                Recuerdame
            </label>
        </div>
    </div>
    <div class="col-auto">
        <button type="submit" class="btn btn-primary mb-2">Entrar</button>
    </div>
</div>



}

