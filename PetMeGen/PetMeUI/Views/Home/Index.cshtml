@model IEnumerable<PetMeGenNHibernate.EN.PetMe.AnuncioEN>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Ultimos anuncios</h2>

<p>
    @Html.ActionLink("Publicar Anuncio", "Create")
</p>
@foreach (var item in Model)
{
    if (item.AnimalContratado == 0)
    {
        <div class="container-fluid">
            <div class="jumbotron">
                <div class="row">
                    <div class="col-md-4 text-left"><b>Desde: </b> @Html.DisplayFor(model => item.FechaIni)</div>
                    <div class="col-md-4 text-center"><b>Direccion: </b> @Html.DisplayFor(model => item.Direccion)</div>
                    <div class="col-md-4 text-right"><b>Detalle: </b> @Html.DisplayFor(model => item.Detalle)</div>


                </div>
                <div class="row">
                    <div class="col-md-4 text-left"><b>Hasta: </b> @Html.DisplayFor(model => item.FechaFin)</div>
                    <div class="col-md-4 text-center"><b>@Html.DisplayFor(model => item.Provincia), @Html.DisplayFor(model => item.Localidad) </b> </div>


                </div>
